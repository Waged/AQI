<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="in.purelogic.aqi.activities.MapsActivity" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardBackgroundColor="#60b0c8db"
        cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:alpha=".8"
        android:clickable="true"
        android:elevation="6dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/mylocation" />

            <TextView
                android:id="@+id/card_tvMyLocation"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:text="Your Location" />

            <ImageView
                android:id="@+id/ivFav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_notinfavorites" />

            <ImageView
                android:id="@+id/ivPm25"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_pm25" />

            <ImageView
                android:id="@+id/ivHumidity"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/tvPm25"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_temp" />

            <ImageView
                android:id="@+id/ivTemp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/tvTemp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/ivFav"
                android:layout_toStartOf="@+id/ivFav"
                android:src="@drawable/ic_humid" />

            <TextView
                android:id="@+id/tvPm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivPm25"
                android:layout_toEndOf="@+id/ivPm25"
                android:layout_toRightOf="@+id/ivPm25"
                android:text="PM2.5" />

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivHumidity"
                android:layout_toEndOf="@+id/ivHumidity"
                android:layout_toRightOf="@+id/ivHumidity"
                android:text="Â°C" />

            <TextView
                android:id="@+id/tvHumid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="Humi"
                android:layout_alignBottom="@+id/ivTemp"
                android:layout_alignRight="@+id/ivFav"
                android:layout_alignEnd="@+id/ivFav" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>